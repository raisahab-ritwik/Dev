<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#22A7F0"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/home"
        android:textColor="#FFF"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/menu_icon" />

    <LinearLayout
        android:id="@+id/linearyLay"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/helpLay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toLeftOf="@+id/back_settings"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/back_settings2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/help_me" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/back_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal|center_vertical" >

            <ImageView
                android:id="@+id/back_settings1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/settings_icon" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#22A7F0" />

</RelativeLayout>